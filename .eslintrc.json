{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jasmine": true,
		"protractor": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"linebreak-style": [ "error", "windows" ],
		"semi": [ "error", "always" ],
		"quotes": [ "error", "single" ],
		"no-console": "warn"
	}
}
